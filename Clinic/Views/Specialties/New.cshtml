@using Clinic.Models;
@{
  Layout = "_Layout";
}

<h2>Create new specialty</h2>

<form action="/specialties" method="post">
  <div class = "form-group row">
      <div class="col col-md-3">
        <label for="specialtyName">Name: </label>
        <input class="form-control" id="specialtyName" name="specialtyName" type="text" required>
      </div>
  </div>
  <div class = "form-group row">
    <button class="btn btn-primary btn-lg" type="submit">Submit</button>
  </div>
</form>
<a href="/specialties">Back</a>