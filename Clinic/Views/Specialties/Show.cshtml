
@using Clinic.Models;
@{
  Layout = "_Layout";
}

<h1>@Model["specialty"].GetName()</h1>

<h3>List of doctors for this specialty:</h3>

<ul>
@foreach(var doctor in @Model["specialtyDoctors"])
{
    <li><a href="/doctors/@doctor.GetId()">@doctor.GetName()</a></li>
}

</ul>
<div class="container">
<h2>Clinic homepage</h2>
<h3><a href='/specialties/@Model["specialty"].GetId()/doctors/new'>Create new doctor</a></h3>
<h3><a href="/specialties">Specialties</a></h3>

</div>